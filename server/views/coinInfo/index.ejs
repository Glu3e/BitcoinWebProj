<% include ../partials/header.ejs %>
  


    <!-- MAIN CONTENT -->
    <div class="container">
      <div class="row">
        <div class="col-md-offset-1 col-md-10">
          <h3>Favourite coin List </h3>
         
          <a href="/coinInfo/add" class="btn btn-primary"><i class="fa fa-plus"></i> Add a coin</a>
          <br>
          <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover">
              <thead>
                <tr>
                  <th>Title</th>
                  <th class="text-center">Edit</th>
                  <th class="text-center">Delete</th>
                </tr>
                </thead>
                <tbody id-"myTable">
                <!-- Template Row -->
                <% for (let count = 0; count < coins.length; count++) { %>
                <tr>
                  <td><%= coins[count].Title %></td>
                  
         
                  <td class="text-center">
                     <a href="/coinInfo/<%= coins[count]._id %>" class="btn btn-primary">
              <i class="fa fa-pencil-square-o"></i> Edit</a>
                  </td>
                  <td class="text-center">
                    <a href="/coinInfo/delete/<%= coins[count]._id %>" class="btn btn-danger">
              <i class="fa fa-trash-o"></i> Delete</a>
                  </td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
           <div class="col-md-offset-1 col-md-10 text-center">
            <ul class="pagination pagination-lg pager" id="myPager"></ul>
          </div>
        </div>
      </div>
    </div>

<% include ../partials/footer.ejs %>